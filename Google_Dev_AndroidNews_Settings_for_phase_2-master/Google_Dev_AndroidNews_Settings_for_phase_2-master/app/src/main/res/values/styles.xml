<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--main activity-->
    <style name="main_activity_wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--list-->
    <style name="list_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_above">@id/footer_view</item>
    </style>
    <!--empty list-->
    <style name="empty_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <!--progress bar-->
    <style name="Custom_Widget_AppCompat_ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--footer-->
    <style name="footer_wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_footer</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card  container -->
    <style name="card_main_wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/padding_t_b_card</item>
        <item name="android:paddingLeft">@dimen/padding_l_r_card</item>
        <item name="android:paddingRight">@dimen/padding_l_r_card</item>
        <item name="android:paddingTop">@dimen/padding_t_b_card</item>
    </style>
    <!--android logo-->
    <style name="card_image_android" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--background image card wrapper-->
    <style name="card_image_wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_img_wrapper</item>
        <item name="android:background">#0c0c0d</item>
    </style>
    <!--background image-->
    <style name="card_image_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_img_wrapper</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!--top and bottom text wrapper-->
    <style name="card_text_wrapper_t_b" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--title-->
    <style name="card_title_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">15</item>
        <item name="android:background">#bdffffc3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">3</item>
        <item name="android:paddingBottom">@dimen/padding_text_card</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_text_card</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--section-->
    <style name="card_section_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">7</item>
        <item name="android:background">#bdffffc3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:padding">@dimen/padding_text_card</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <!--bottom left text wrapper-->
    <style name="card_text_author_date_wrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">15</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--author-->
    <style name="card_author_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#bd9ccc61</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_text_card</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <!--date-->
    <style name="card_date_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#bd9ccc61</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/padding_text_card</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_text_card</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <!--read more-->
    <style name="card_read_more_view" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">12</item>
        <item name="android:background">#bd9ccc61</item>
        <item name="android:drawableEnd">@drawable/ic_view_more</item>
        <item name="android:drawablePadding">@dimen/padding</item>
        <item name="android:drawableRight">@drawable/ic_view_more</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_text_card</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_text_card</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
