<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerX="50%"
                android:endColor="@color/colorSongItem"
                android:startColor="@color/colorSongItem"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#a17577a6" />
        </shape>
    </item>
</layer-list>