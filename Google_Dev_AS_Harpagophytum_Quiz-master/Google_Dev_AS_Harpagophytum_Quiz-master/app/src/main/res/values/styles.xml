<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ScrollView. -->
    <style name="ScrollView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Quiz main background. -->
    <style name="QuizMainBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/quiz_main_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Quiz user wrapper. -->
    <style name="QuizUserWrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Title questions' types text. -->
    <style name="TitleTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Title questions' types background. -->
    <style name="TitleBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/quiz_group_background</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Question's main container. -->
    <style name="QuestionMainContainer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/quiz_question_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Question Number's background. -->
    <style name="QuestionNumberBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/quiz_group_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Question Number's text. -->
    <style name="QuestionNumberTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Questions' text. -->
    <style name="QuestionTextView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Questions' landscape view. -->
    <style name="QuestionLandscapeSpaceView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- RadioGroup. -->
    <style name="RadioGroup" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioButton. -->
    <style name="RadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- EditText container. -->
    <style name="EditTextContainer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Checkboxes wrapper (and optionally parts of score and solution). -->
    <style name="CheckboxesWrapper" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Checkboxes and ImageView. -->
    <style name="Checkbox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Checkboxes plus Text. -->
    <style name="CheckPlusText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Checkboxes plus Box plus image. -->
    <style name="CheckPlusBoxPlusImg" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Button Grading and Submit. -->
    <style name="ButtonBrown" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/quiz_button_background</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Button Reset. -->
    <style name="ButtonReset" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Button Valid. -->
    <style name="ButtonValid" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Edit Text Number. -->
    <style name="EditTextNumber" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text your choice. -->
    <style name="TextEnterYourChoice" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Wrapper Text Discover your choice (and optionally parts of score and solution). -->
    <style name="WrapperDiscover" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Wrapper Button Grading. -->
    <style name="WrapperGrading" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Wrapper Button Submit. -->
    <style name="WrapperSubmit" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Wrapper EditText name. -->
    <style name="WrapperEditTextName" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- EditText name. -->
    <style name="EditTextName" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Wrapper receive the answers. -->
    <style name="WrapperAnswer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Text receive the answers -->
    <style name="TextAnswer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Wrapper image special landscape -->
    <style name="WrapperImgLand">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- View as space special landscape -->
    <style name="ViewSpaceLand">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
